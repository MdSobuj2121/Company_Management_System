<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/hh"
    tools:context=".MainActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id"
        android:inputType="number"
        android:textColorHint="@color/teal_200"
        android:id="@+id/edtupdate_id"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtupdate_name"
        android:textColorHint="@color/teal_200"
        android:hint="Employee Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtupdate_companyname"
        android:textColorHint="@color/teal_200"
        android:hint="Company" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtupdate_designation"
        android:textColorHint="@color/teal_200"
        android:hint="Designation" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtupdate_phno"
        android:inputType="phone"
        android:textColorHint="@color/teal_200"
        android:hint="Contact Number" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Record"
        android:background="#E91E63"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btnupdate_update"
        />
</LinearLayout>